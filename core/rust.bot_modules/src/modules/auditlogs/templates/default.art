//lang:lang_lua
function(args) 
    -- Make the embed
    local embed = {
        title = args.event_titlename,
        description = "",
        fields = {}
    }

    -- Add the fields to the description
    for key, value in pairs(args.fields) do
        embed.description = embed.description .. "**" .. key:gsub("_", " "):upper() .. "**: " .. __ar_modules.message.format_gwevent_categorized_field(value) .. "\n"
    end

    return embed
end    